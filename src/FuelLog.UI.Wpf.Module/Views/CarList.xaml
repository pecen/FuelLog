<UserControl
  x:Class="FuelLog.UI.Wpf.Module.Views.CarList"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Views="clr-namespace:FuelLog.UI.Wpf.Module.UserControls"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:uc="clr-namespace:FuelLog.UI.Wpf.Module.UserControls"
  xmlns:vm="clr-namespace:FuelLog.UI.Wpf.Module.ViewModels"
  prism:ViewModelLocator.AutoWireViewModel="True">
  <UserControl.Resources>
    <DataTemplate x:Key="CarItem" DataType="{x:Type vm:CarItemViewModel}">
      <uc:CarItem DataContext="{Binding}" />
    </DataTemplate>
  </UserControl.Resources>
  <Grid>
    <StackPanel Background="Black">
      <ListView
        Background="Black"
        BorderThickness="0"
        ItemTemplate="{StaticResource CarItem}"
        ItemsSource="{Binding CarItems, UpdateSourceTrigger=PropertyChanged}">
        <!--<ListView.ItemTemplate>
        <DataTemplate>
          <UserControls:CarItem DataContext="{Binding CarItems}" />
        </DataTemplate>
      </ListView.ItemTemplate>-->
      </ListView>
      <!--<Label
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Content="CarList View" />-->
    </StackPanel>
  </Grid>
</UserControl>
