<UserControl xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
  x:Class="FuelLog.UI.Wpf.Module.Views.CarList"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Views="clr-namespace:FuelLog.UI.Wpf.Module.UserControls"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:uc="clr-namespace:FuelLog.UI.Wpf.Module.UserControls"
  prism:ViewModelLocator.AutoWireViewModel="True">
  <UserControl.Resources>
    <DataTemplate x:Key="CarItem">
      <uc:CarItem />
    </DataTemplate>
  </UserControl.Resources>
  <Grid Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="20*" />
    </Grid.RowDefinitions>
    <StackPanel Grid.Row="0" Background="Black">
      <ListView
        Background="Black"
        BorderThickness="0"
        ItemTemplate="{StaticResource CarItem}"
        ItemsSource="{Binding CarItems}">
      </ListView>
    </StackPanel>
    <telerik:RadDockPanel Grid.Row="1" VerticalAlignment="Bottom">
      <telerik:RadButton Content="Add Car" Command="{Binding AddCarCommand}" CommandParameter="AddCar" />
    </telerik:RadDockPanel>
  </Grid>
</UserControl>
