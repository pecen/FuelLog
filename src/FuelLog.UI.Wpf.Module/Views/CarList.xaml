<UserControl
  x:Class="FuelLog.UI.Wpf.Module.Views.CarList"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:UserControls="clr-namespace:FuelLog.UI.Wpf.Module.UserControls"
  xmlns:Views="clr-namespace:FuelLog.UI.Wpf.Module.Views"
  xmlns:prism="http://prismlibrary.com/"
  prism:ViewModelLocator.AutoWireViewModel="True">
  <UserControl.Resources>
    <DataTemplate x:Key="CarItem" DataType="{x:Type UserControls:CarItem}">
      <StackPanel>
        <UserControls:CarItem />
      </StackPanel>
    </DataTemplate>
  </UserControl.Resources>
  <Grid>
    <ListView ItemTemplate="{StaticResource CarItem}" ItemsSource="{Binding CarList}">
      <!--<ListView.ItemTemplate>
        <DataTemplate>
          <UserControls:CarItem DataContext="{Binding CarItems}" />
        </DataTemplate>
      </ListView.ItemTemplate>-->
    </ListView>
    <Label
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Content="CarList View" />
  </Grid>
</UserControl>
