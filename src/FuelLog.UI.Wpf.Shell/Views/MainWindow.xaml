<Window
  x:Class="FuelLog.UI.Wpf.Shell.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:fuellog="clr-namespace:FuelLog.UI.Wpf.Module.Views;assembly=FuelLog.UI.Wpf.Module"
  xmlns:prism="http://prismlibrary.com/"
  xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
  Title="{Binding Title}"
  Width="330"
  Height="491"
  prism:ViewModelLocator.AutoWireViewModel="True">

  <Window.Resources>
    <Style TargetType="telerik:RadTabItem">
      <Setter Property="Header" Value="{Binding DataContext.Title}" />
    </Style>
  </Window.Resources>
  <Grid>
    <telerik:RadTabControl prism:RegionManager.RegionName="{Binding TabRegion}" Background="White" />
  </Grid>
</Window>
